{
  "expo": {
    "name": "Rise",
    "slug": "rise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "ios": {
        "soundFile": "./assets/sounds/orkney.caf"
      }
    },
    "ios": {
      "bundleIdentifier": "com.yourusername.rise",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "audio",
          "fetch",
          "processing"
        ],
        "NSCameraUsageDescription": "This app uses the camera for QR code scanning.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for...",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library for...",
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/sounds/orkney.caf",
            "./assets/sounds/radar.caf",
            "./assets/sounds/beacon.caf",
            "./assets/sounds/chimes.caf",
            "./assets/sounds/circuit.caf",
            "./assets/sounds/reflection.caf"
          ]
        }
      ],
      "react-native-vision-camera",
      [
        "expo-background-fetch",
        {
          "startOnBoot": true
        }
      ]
    ],
    "android": {
      "package": "com.yourusername.rise"
    }
  }
}
